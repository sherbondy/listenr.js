header
  position fixed
  top 0
  width 100%
  height 44px
  text-align center
  color #fff
  background #450b9b

  h1
    margin 0
    font-size 24px
    padding 8px 0
    text-shadow 0px 1px #000

#listenr
  margin-top 44px

  & ul
    list-style none
    margin 0
    padding 0

    & li
      margin 0
      padding 0
      height 48px
      border-bottom 1px solid #ccc
      &:hover
        background-color #069eff
        color #fff

      &.playing
        background-position 95% center
        background-repeat no-repeat
        background-image  url('/img/playing.png')
        &:hover
          background-image url('/img/playing_white.png')

      & a
        display block
        text-decoration none
        color inherit
        padding-bottom 4px
        & em
          color inherit

      & strong, & em
        display block
        overflow hidden
        white-space no-wrap
        text-overflow ellipsis
        width 240px
        height 20px
      & strong
        padding-top 4px
      & em
        font-style normal
        color #666

      & img
        width 48px
        height 48px
        margin-right 8px
        float left
