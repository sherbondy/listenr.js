header
  text-align center
  color #fff
  background #450b9b

  h1
    margin 0
    font-size 24px
    padding 8px 0
    text-shadow 0px 1px #000

#listenr
  & ul
    list-style none
    margin 0
    padding 0

    & li
      margin 0
      padding 0
      height 48px
      border-bottom 1px solid #ccc

      & strong, & em
        display block
      & strong
        padding-top 8px

      & img
        width 48px
        height 48px
        margin-right 8px
        float left
